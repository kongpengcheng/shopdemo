<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/tv_account"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:text="账号登陆" />

<Button
    android:id="@+id/btn_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    android:text="登陆" />

<TextView
    android:id="@+id/tv_phone_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_account"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="50dp"
    android:text="手机号：" />

<EditText
    android:id="@+id/et_phone"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_account"
    android:layout_marginTop="40dp"
    android:layout_toRightOf="@id/tv_phone_name"
    android:phoneNumber="true" />

<TextView
    android:id="@+id/tv_password_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_phone_name"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="40dp"
    android:text="密码：" />

<EditText
    android:id="@+id/et_password"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/et_phone"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@id/tv_password_name" />

<TextView
    android:id="@+id/tv_forget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/et_password"
    android:layout_marginLeft="135dp"
    android:layout_marginTop="10dp"
    android:text=" 忘记密码?" />

<TextView
    android:id="@+id/tv_regison"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/et_password"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="250dp"
    android:text="注册" />
</RelativeLayout>
