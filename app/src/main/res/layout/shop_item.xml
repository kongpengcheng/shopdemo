<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/im_wine"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cb_check"
        android:src="@drawable/wine" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/im_wine"
        android:text="商品名称商品名称商品名称商品商品名称商品商品名称商品" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/im_wine"
        android:text="$199.00" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/tv_money"
        android:text="数量" />


    <Button
        android:id="@+id/btn_min"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/tv_number"
        android:focusable="false"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/black"></Button>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/btn_min"
        android:background="@null"
        android:digits="1234567890"
        android:gravity="center"
        android:numeric="integer"
        android:singleLine="true"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/et_number"
        android:focusable="false"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/black"></Button>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="#BFBFBF"
        android:gravity="center"
        android:text="删除"
        android:textColor="#000000" />
</RelativeLayout>
