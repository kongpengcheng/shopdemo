<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tv_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/wine" />

    <TextView
        android:id="@+id/tv_wine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_photo"
        android:text="法国 法币那古堡 皇族熊市系列 蓝于干红葡萄酒" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wine_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_photo"
        android:text="国家外交部服务局授权 外交官专用"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_activity_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wine_name"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_photo"
        android:text="活动价:" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wine_name"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/tv_activity_money"
        android:text="199"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_number_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wine_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/tv_activity_money"
        android:text="数量：" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wine_name"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/tv_number_top"
        android:text="1" />

    <TextView
        android:id="@+id/tv_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="发票信息：" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/tv_invoice"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人" />

        <RadioButton
            android:id="@+id/rb_unint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="单位" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_name_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="90dp"
        android:text="单位发票"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_money"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="190dp"
        android:text="个人发票"
        android:visibility="invisible" />

