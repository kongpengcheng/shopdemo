<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="重置密码" />


    <TextView
        android:id="@+id/tv_phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="手机号：" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/tv_phone_name"
        android:phoneNumber="true" />

    <TextView
        android:id="@+id/tv_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone_name"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:text="验证码" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_code_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_code"
        android:layout_toEndOf="@+id/et_code"
        android:text="发送验证码" />

    <TextView
        android:id="@+id/tv_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_code_name"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:text="设置新密码：" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_code"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/tv_password_name" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="47dp"
        android:layout_toEndOf="@+id/tv_code_name"
        android:text="完成" />


</RelativeLayout>
